rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // DEVELOPMENT RULES - VERY PERMISSIVE
    // ⚠️  WARNING: DO NOT USE IN PRODUCTION ⚠️
    
    // Allow all authenticated users to read/write everything
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Allow unauthenticated users to create quotes and clients
    // (for booking form submissions)
    match /quotes/{quoteId} {
      allow create: if true;
    }
    
    match /clients/{clientId} {
      allow create: if true;
    }
  }
}
