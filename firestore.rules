rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Users collection - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Clients collection - authenticated users can read/write all clients
    match /clients/{clientId} {
      allow read, write: if isAuthenticated();
      
      // Allow creating clients during registration/booking process
      allow create: if true;
    }
    
    // Quotes collection - authenticated users can read/write all quotes
    match /quotes/{quoteId} {
      allow read, write: if isAuthenticated();
      
      // Allow creating quotes from booking form (even unauthenticated)
      allow create: if true;
    }
    
    // Jobs collection - authenticated users can read/write all jobs
    match /jobs/{jobId} {
      allow read, write: if isAuthenticated();
    }
    
    // Teams collection - authenticated users can read/write
    match /teams/{teamId} {
      allow read, write: if isAuthenticated();
    }
    
    // Analytics and reports - authenticated users can read/write
    match /analytics/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Settings collection - authenticated users can read/write
    match /settings/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // File uploads and media
    match /uploads/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Notifications collection
    match /notifications/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // Audit logs - authenticated users can read/write
    match /audit_logs/{document=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Default fallback - deny all access to unmatched paths
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
